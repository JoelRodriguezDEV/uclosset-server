generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // <--- ¡VOLVIÓ A CASA!
}

// Nuestra tabla maestra de productos
model Product {
  id          Int      @id @default(autoincrement())
  apiId       Int      @unique
  
  title       String
  price       Float
  description String
  category    String
  image       String
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}